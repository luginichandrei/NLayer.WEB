@{
    ViewBag.Title = "Home page";
}

<h2>Customer</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order)
        </th>

